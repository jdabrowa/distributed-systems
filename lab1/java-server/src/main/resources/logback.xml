<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="com.jdabrowa.distributed.zad2" level="INFO" />
    <logger name="com.jdabrowa.distributed.zad3" level="DEBUG" />

    <logger name="com.jdabrowa.distributed.zad2.FileServer" level="DEBUG" />
    <logger name="com.jdabrowa.distributed.zad2.FileServerRunnable" level="DEBUG" />

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>